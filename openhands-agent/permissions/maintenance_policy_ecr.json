{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ECRAuth",
      "Effect": "Allow",
      "Action": ["ecr:GetAuthorizationToken"],
      "Resource": "*"
    },
    {
      "Sid": "ECRRepositoryCreate",
      "Effect": "Allow",
      "Action": ["ecr:CreateRepository", "ecr:TagResource"],
      "Resource": "*"
    },
    {
      "Sid": "ECRRepositoryReadOnly",
      "Effect": "Allow",
      "Action": [
        "ecr:DescribeRepositories",
        "ecr:ListTagsForResource",
        "ecr:GetLifecyclePolicy",
        "ecr:GetRepositoryPolicy"
      ],
      "Resource": "*"
    },
    {
      "Sid": "ECRRepositoryModifyTagged",
      "Effect": "Allow",
      "Action": [
        "ecr:DeleteRepository",
        "ecr:UntagResource",
        "ecr:PutLifecyclePolicy",
        "ecr:DeleteLifecyclePolicy",
        "ecr:SetRepositoryPolicy",
        "ecr:DeleteRepositoryPolicy"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "aws:ResourceTag/install.nuon.co/id": "{{.nuon.install.id}}"
        }
      }
    },
    {
      "Sid": "ECRImageRead",
      "Effect": "Allow",
      "Action": [
        "ecr:BatchCheckLayerAvailability",
        "ecr:GetDownloadUrlForLayer",
        "ecr:BatchGetImage",
        "ecr:DescribeImages"
      ],
      "Resource": "arn:aws:ecr:*:*:repository/{{.nuon.install.id}}/*"
    },
    {
      "Sid": "ECRImagePush",
      "Effect": "Allow",
      "Action": ["ecr:InitiateLayerUpload", "ecr:UploadLayerPart", "ecr:CompleteLayerUpload", "ecr:PutImage"],
      "Resource": "arn:aws:ecr:*:*:repository/{{.nuon.install.id}}/*"
    }
  ]
}
