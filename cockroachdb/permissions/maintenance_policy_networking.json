{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DescribeVpcAndSubnets",
      "Effect": "Allow",
      "Action": [
        "ec2:DescribeVpcs",
        "ec2:DescribeSubnets",
        "ec2:DescribeRouteTables",
        "ec2:DescribeNetworkAcls",
        "ec2:DescribeInternetGateways",
        "ec2:DescribeNatGateways",
        "ec2:DescribeVpcAttribute"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "ec2:ResourceTag/install.nuon.co/id": "{{ .nuon.install.id }}"
        }
      }
    }
  ]
}
