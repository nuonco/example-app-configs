{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DescribeS3Bucket",
      "Effect": "Allow",
      "Action": [
        "s3:GetBucketAcl",
        "s3:GetBucketLocation",
        "s3:GetBucketPolicy",
        "s3:GetBucketPolicyStatus",
        "s3:GetBucketTagging",
        "s3:GetBucketVersioning",
        "s3:GetEncryptionConfiguration",
        "s3:ListBucket"
      ],
      "Resource": "arn:aws:s3:::{{ .nuon.install.id }}"
    },
    {
      "Sid": "EmptyS3Bucket",
      "Effect": "Allow",
      "Action": [
        "s3:DeleteObject",
        "s3:DeleteObjectVersion",
        "s3:ListBucketVersions"
      ],
      "Resource": [
        "arn:aws:s3:::{{ .nuon.install.id }}",
        "arn:aws:s3:::{{ .nuon.install.id }}/*"
      ]
    }
  ]
}
